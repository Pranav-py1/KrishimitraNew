rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC READ COLLECTIONS
    // Allows unauthenticated users to browse experts, articles, and product catalogs.
    
    match /users/{userId} {
      // Profiles (including experts) are publicly readable for discovery.
      allow read: if true;
      // Only the authenticated owner can modify their own profile.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /expertArticles/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /machines/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /produce/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /livestockListings/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // AUTHENTICATED ONLY COLLECTIONS
    // Private transactional data and communications require a valid user session.
    
    match /consultations/{id} {
      allow read, write: if request.auth != null;
    }
    
    match /bookings/{id} {
      allow read, write: if request.auth != null;
    }
    
    match /soilTests/{id} {
      allow read, write: if request.auth != null;
    }
    
    match /sales/{id} {
      allow read, write: if request.auth != null;
    }
    
    match /chatRooms/{id} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // Global fallback for any other authenticated operations
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}