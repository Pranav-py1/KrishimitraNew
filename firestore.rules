rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // For MVP/Demo purposes, allow any authenticated user to read and write all documents.
    // This supports persona-switching and cross-role interactions (e.g. Farmer reading Expert profile).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Specific ownership rules for user profiles to prevent unauthorized hijacking
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}