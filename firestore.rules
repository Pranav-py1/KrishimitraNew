rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Global rule: Allow read and write only for authenticated users.
    // This is a structural fix for the persona-based prototype to ensure
    // that no unauthenticated requests are ever made or accepted.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}